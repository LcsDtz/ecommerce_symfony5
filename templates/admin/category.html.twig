{% extends 'base.html.twig' %}

{% block title %}
    Panel Admin
{% endblock %}

{% block body %}
    <h1>Catégories</h1>

    <a href="{{ path("category_create")}}" class="btn btn-sm btn-primary mt-2">
        Créer une catégorie <i class="fas fa-plus"></i>
    </a>

    <table class="table mt-2">
        <thead>
            <tr>
                <th>Catégorie</th>
                <th>Slug</th>
                <th> </th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
                <tr class="table-light">
                    <th scope="row">{{ category.name }}</th>
                    <td> {{ category.slug }}</td>
                    <td><a href="{{ path("category_edit", {'id': category.id}) }}">Edit</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>


{% endblock %}
